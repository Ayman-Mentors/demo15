<odoo>
    <data>
        <record id="bale_form_view" model="ir.ui.view">
            <field name="name">stock.bale.form</field>
            <field name="model">stock.bale</field>
            <field name="arch" type="xml">
                <form string="Bale">
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Bales Details">
                                <group>
                                    <field name="bales_line" nolabel="1">
                                        <tree string="Bale Details" editable="bottom">
                                            <field name="product_id"/>
                                            <field name="code"/>
                                            <field name="label"/>
                                            <field name="quantity"/>
                                            <field name="unit"/>
                                        </tree>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="stock_picking_inherit_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='move_ids_without_package']" position="before">
                    <button name="load_bales" type="object" string="Load Bales"/>
                </xpath>

                <!--                <xpath expr="//field[@name='move_ids_without_package']" position="attributes">-->
                <!--                    &lt;!&ndash; Add your fields or attributes here &ndash;&gt;-->
                <!--                    <attribute name="widget">section_and_note_one2many</attribute>-->
                <!--                </xpath>-->
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']"
                       position="before">
                    <!-- Add your fields or attributes here -->
                    <!--                    <control>-->
                    <!--                        <create name="add_product_control" string="Add a product"/>-->
                    <!--                        <create name="add_section_control" string="Add a section"-->
                    <!--                                context="{'default_display_type': 'line_section'}"/>-->
                    <!--                        <create name="add_note_control" string="Add a note"-->
                    <!--                                context="{'default_display_type': 'line_note'}"/>-->
                    <!--                    </control>-->

                    <!--                    <field name="display_type" invisible="1"/>-->
                    <field name="bale"/>
                </xpath>
                <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='description_picking']"
                       position="replace">
                    <field name="name" widget="section_and_note_text" optional="show"/>
                </xpath>
            </field>
        </record>

        <record id="stock_bales_menu_action" model="ir.actions.act_window">
            <field name="name">Bales</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.bale</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    <!-- Add Text Here -->
                </p>
                <p>
                    <!-- More details about what a user can do with this object will be OK -->
                </p>
            </field>
        </record>

        <menuitem id="menu_stock_bales" name="Bales" parent="stock.menu_stock_root" action="stock_bales_menu_action"
                  sequence="5"/>
    </data>
</odoo>